{
  "openapi": "3.0.0",
  "info": {
    "title": "SiaGraph API",
    "version": "1.0.0",
    "description": "API documentation for the SiaGraph API.<br>This API version is still actively being extended, but changes to existing endpoints and their response layout should be minimal.",
    "contact": {
      "Discord": "_ctrlaltdefeat"
    }
  },
  "servers": [
    {
      "url": "http://siagraph.info/api/v1",
      "description": "SiaGraph API v1"
    }
  ],
  "paths": {
    "/daily/compare_metrics": {
      "get": {
        "summary": "Compare Metrics",
        "description": "Fetch and compare metrics such as storage, hosts, revenue, and coin prices over a specified time period.",
        "parameters": [
          {
            "name": "actual_date",
            "in": "query",
            "description": "Date to compare from in YYYY-MM-DD format.",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "compare_date",
            "in": "query",
            "description": "Date to compare to in YYYY-MM-DD format.",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "actual": {
                      "type": "object",
                      "properties": {
                        "utilized_storage": {
                          "type": "integer",
                          "description": "Current utilized storage."
                        },
                        "total_storage": {
                          "type": "integer",
                          "description": "Current total storage."
                        },
                        "online_hosts": {
                          "type": "integer",
                          "description": "Number of online hosts."
                        },
                        "30_day_revenue": {
                          "type": "object",
                          "additionalProperties": {
                            "type": "number"
                          },
                          "description": "30-day revenue data by currency."
                        },
                        "active_contracts": {
                          "type": "integer",
                          "description": "Number of active contracts."
                        },
                        "coin_price": {
                          "type": "object",
                          "properties": {
                            "eur": {
                              "type": "number",
                              "description": "Current coin price in EUR."
                            },
                            "usd": {
                              "type": "number",
                              "description": "Current coin price in USD."
                            }
                          }
                        }
                      }
                    },
                    "change": {
                      "type": "object",
                      "properties": {
                        "utilized_storage": {
                          "type": "integer",
                          "description": "Change in utilized storage."
                        },
                        "total_storage": {
                          "type": "integer",
                          "description": "Change in total storage."
                        },
                        "online_hosts": {
                          "type": "integer",
                          "description": "Change in online hosts."
                        },
                        "30_day_revenue": {
                          "type": "object",
                          "additionalProperties": {
                            "type": "number"
                          },
                          "description": "Difference in 30-day revenue by currency."
                        },
                        "active_contracts": {
                          "type": "integer",
                          "description": "Change in active contracts."
                        },
                        "coin_price": {
                          "type": "object",
                          "properties": {
                            "eur": {
                              "type": "number",
                              "description": "Change in coin price in EUR."
                            },
                            "usd": {
                              "type": "number",
                              "description": "Change in coin price in USD."
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "default": {
                    "summary": "Example response",
                    "value": {
                      "actual_date": "2025-01-14T12:00:00Z",
                      "compare_date": "2024-12-15T12:00:00Z",
                      "actual": {
                        "utilized_storage": 1854304461783040,
                        "total_storage": 8076470131884032,
                        "online_hosts": 469,
                        "30_day_revenue": {
                          "sc": 3.313044290068622e+30,
                          "usd": 18491.08,
                          "eur": 17789.6,
                          "btc": 0.18
                        },
                        "active_contracts": 37573,
                        "coin_price": {
                          "eur": 0.00566,
                          "usd": 0.00583
                        }
                      },
                      "change": {
                        "utilized_storage": 4890441023488,
                        "total_storage": 5654827761664,
                        "online_hosts": 1,
                        "30_day_revenue": {
                          "sc": -2.081499236408141e+25,
                          "usd": -0.22,
                          "eur": -0.2,
                          "btc": 0
                        },
                        "active_contracts": 101,
                        "coin_price": {
                          "eur": -0.00074,
                          "usd": -0.00089
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request. Possibly due to invalid date format."
          },
          "500": {
            "description": "Server error."
          }
        }
      }
    },
    "/daily/growth": {
      "get": {
        "summary": "Retrieve daily growth metrics",
        "description": "Fetches metrics such as total storage, utilized storage, and active/total hosts.",
        "parameters": [
          {
            "name": "start",
            "in": "query",
            "required": false,
            "description": "Start date for filtering metrics in ISO 8601 format.",
            "schema": {
              "type": "string",
              "format": "date"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "date": {
                        "type": "string",
                        "format": "date-time",
                        "description": "The date and time of the metrics"
                      },
                      "total_storage": {
                        "type": "string",
                        "description": "Total available storage across all hosts"
                      },
                      "utilized_storage": {
                        "type": "string",
                        "description": "Total storage currently being used"
                      },
                      "active_hosts": {
                        "type": "string",
                        "description": "Number of currently active hosts"
                      },
                      "total_hosts": {
                        "type": "string",
                        "description": "Total number of hosts ever registered"
                      }
                    }
                  }
                },
                "examples": {
                  "default": {
                    "summary": "Example response",
                    "value": [
                      {
                        "date": "2025-01-14T00:00:00Z",
                        "total_storage": "8088435612975104",
                        "utilized_storage": "1837307518779392",
                        "active_hosts": "470",
                        "total_hosts": "86005"
                      },
                      {
                        "date": "2025-01-15T00:00:00Z",
                        "total_storage": "8082185361817600",
                        "utilized_storage": "1859323349172224",
                        "active_hosts": "467",
                        "total_hosts": "86005"
                      }
                    ]
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/monthly/metrics": {
      "get": {
        "summary": "Get Monthly Max Used Storage",
        "description": "Fetches the maximum used storage for each month grouped by the month.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Successful response with the grouped monthly max used storage data.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "date": {
                        "type": "string",
                        "format": "date",
                        "description": "The first day of the month for which data is grouped."
                      },
                      "max_used_storage": {
                        "type": "string",
                        "description": "The maximum used storage value for the month in bytes."
                      }
                    },
                    "required": [
                      "date",
                      "max_used_storage"
                    ]
                  }
                },
                "examples": {
                  "default": {
                    "summary": "Example response showing three months of storage metrics",
                    "value": [
                      {
                        "date": "2024-11-01",
                        "max_used_storage": "43179336269824"
                      },
                      {
                        "date": "2024-12-01",
                        "max_used_storage": "44199386808320"
                      },
                      {
                        "date": "2025-01-01",
                        "max_used_storage": "45437591486464"
                      }
                    ]
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error. Query execution failed or another error occurred.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "description": "Error message describing the failure."
                    }
                  }
                },
                "examples": {
                  "queryError": {
                    "summary": "Query execution error",
                    "value": {
                      "error": "Error executing query: <details>"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/monthly/revenue": {
      "get": {
        "summary": "Retrieve Monthly Revenue Data",
        "description": "Fetches monthly revenue data from the external API, processes it to compute revenue differences, and returns the results.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Successful response with monthly revenue data and differences.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "description": "Monthly revenue data with different currency representations",
                  "items": {
                    "type": "object",
                    "properties": {
                      "date": {
                        "type": "string",
                        "format": "date",
                        "description": "Year and month in YYYY-MM format"
                      },
                      "sc": {
                        "type": "number",
                        "format": "float",
                        "description": "Revenue in SiaCoin"
                      },
                      "usd": {
                        "type": "string",
                        "description": "Revenue in US Dollars"
                      },
                      "eur": {
                        "type": "string",
                        "description": "Revenue in Euros"
                      },
                      "btc": {
                        "type": "string",
                        "description": "Revenue in Bitcoin"
                      }
                    }
                  }
                },
                "examples": {
                  "default": {
                    "summary": "Example response showing three months of revenue data",
                    "value": [
                      {
                        "sc": -5.800636320053199e-6,
                        "usd": "14651.52",
                        "eur": "13846.94",
                        "btc": "0.15458122",
                        "date": "2024-11"
                      },
                      {
                        "sc": 7.133701809754866e-6,
                        "usd": "14673.44",
                        "eur": "14094.98",
                        "btc": "0.14200507",
                        "date": "2024-12"
                      },
                      {
                        "sc": 3.062447746611937e-6,
                        "usd": "4103.27",
                        "eur": "3966.22",
                        "btc": "0.04303025",
                        "date": "2025-01"
                      }
                    ]
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error fetching or processing the data.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "description": "Description of the error."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/explorer_metrics": {
      "get": {
        "summary": "Get Explorer Metrics",
        "description": "Fetches metrics related to consensus, block data, unconfirmed transactions, connected peers, and contracts from the Siacoin explorer.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Successful response with explorer metrics data.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "blockHeight": {
                      "type": "integer",
                      "description": "The current block height in the Siacoin blockchain."
                    },
                    "blockFoundTime": {
                      "type": "string",
                      "format": "date-time",
                      "description": "The timestamp when the block was found."
                    },
                    "averageFoundSeconds": {
                      "type": "number",
                      "format": "float",
                      "description": "The average time in seconds taken to find a block."
                    },
                    "estimatedV2Time": {
                      "type": "string",
                      "format": "date-time",
                      "description": "Estimated time when version 2 will be reached based on block height."
                    },
                    "connectedPeers": {
                      "type": "integer",
                      "description": "The number of peers connected to the network."
                    },
                    "newHosts": {
                      "type": "integer",
                      "description": "The number of new hosts detected in the last block."
                    },
                    "completedContracts": {
                      "type": "integer",
                      "description": "The number of completed contracts in the last block."
                    },
                    "newContracts": {
                      "type": "integer",
                      "description": "The number of new contracts detected in the last block."
                    },
                    "unconfirmedTransactions": {
                      "type": "integer",
                      "description": "The number of unconfirmed transactions in the transaction pool."
                    }
                  },
                  "required": [
                    "blockHeight",
                    "blockFoundTime",
                    "averageFoundSeconds",
                    "estimatedV2Time",
                    "connectedPeers",
                    "newHosts",
                    "completedContracts",
                    "newContracts",
                    "unconfirmedTransactions"
                  ]
                },
                "examples": {
                  "example": {
                    "summary": "Example response",
                    "value": {
                      "blockHeight": 505586,
                      "blockFoundTime": "2025-01-15T13:44:26Z",
                      "averageFoundSeconds": 529,
                      "estimatedV2Time": "2025-03-13T21:40:37Z",
                      "connectedPeers": 24,
                      "newHosts": 0,
                      "completedContracts": 0,
                      "newContracts": 5,
                      "unconfirmedTransactions": 60
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error, failed to fetch data.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "description": "Error message describing the failure."
                    }
                  },
                  "examples": {
                    "queryError": {
                      "summary": "Data fetch error",
                      "value": {
                        "error": "Error fetching data from Siacoin explorer."
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/host": {
