            "name": "id",
            "in": "query",
            "description": "The unique ID of the host.",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "public_key",
            "in": "query",
            "description": "The public key of the host.",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
